/**
 * Helper para importar la configuraciÃ³n de  los modulos
 *
 * @param $modules
 */
function _isa_import_config($modules) {
  if (!is_array($modules)) {
    $modules = [$modules];
  }
  foreach ($modules as $module) {
    \Drupal::service('config.installer')
      ->installDefaultConfig('module', $module);
  }
}

