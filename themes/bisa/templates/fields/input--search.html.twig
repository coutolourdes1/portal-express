{#
/**
 * @file
 * Default theme implementation for an 'input' #type form element.
 *
 * Available variables:
 * - attributes: A list of HTML attributes for the input element.
 * - children: Optional additional rendered elements.
 *
 * @see template_preprocess_input()
 *
 * @ingroup themeable
 */
#}
{% if element['#attributes']['data-search-input'] is defined and element['#attributes']['data-search-input'] == 'search-input' %}
    <div class="col">
        <input{{attributes.addClass('form-control', 'form-control-lg', 'form-control-borderless')}} placeholder="{{ 'What are you looking for?'|t }}" />{{ children }}
    </div>
{% else %}
    <input{{attributes}} />{{ children }}
{% endif %}

